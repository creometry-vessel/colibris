#GENERATED BY go-create
FROM golang:1.17.6-alpine3.15 AS builder

WORKDIR /build

COPY go.mod go.sum ./

RUN go mod download

COPY . .

ENV CGO_ENABLED=0 GOOS=linux GOARCH=amd64

RUN go build -ldflags="-s -w" -o apiserver .

FROM scratch

COPY --from=builder ["/build/apiserver", "/"]

EXPOSE 3000

ENTRYPOINT ["/apiserver"]

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_marginLeft="85dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  >
    <androidx.cardview.widget.CardView
        android:id="@+id/carddetail"
        android:layout_marginTop="5dp"

        android:layout_height="240dp"
        android:layout_width="240dp"
        android:layout_marginRight="20dp"

        android:backgroundTint="#D2F3E7"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:text="doraaaa"
                android:visibility="invisible"
                android:id="@+id/valise"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/vector"/>

            <TextView
                android:id="@+id/nomdo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:text="Mahdi Khelil"
                android:backgroundTint="@color/color"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:fontFamily="@font/robo_regular"
                android:textSize="15dp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/numdo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28411000"
                android:textColor="@color/colorlight"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/adresse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/robo_regular"
                        android:text="Bouteille en verre"
                        />
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robo_regular"
                        android:textColor="@color/colorlight"
                        android:text="depose lundi a 10:00"
                        android:textSize="10dp"/>
                    <TextView
                        android:id="@+id/temps"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robo_regular"
                        android:textColor="@color/colorlight"
                        android:text="Ghazella centre"
                        android:textSize="10dp"/>


                </LinearLayout>


            </LinearLayout>
            <Space
                android:layout_width="20dp"
                android:layout_height="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:gravity="top|center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/annuler"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="Annuler"
                    android:textColor="@color/cardview_light_background"
                    android:background="@drawable/button"
                    android:fontFamily="@font/robo_regular"
                    android:textAllCaps="false"
                    android:textSize="15dp" />
                <Button
                    android:id="@+id/afficher"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/chat"
                    android:textSize="5dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
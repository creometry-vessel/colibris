<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bachkroug2"
    tools:context=".Score">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardscore"
        android:layout_width="350dp"
        android:layout_height="400dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="6dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="201dp"
        android:layout_marginEnd="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/vector"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Mon Ancien Score"
                    android:textSize="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorPrimaryDark">
                </TextView>


                <TextView
                    android:id="@+id/AncienScore"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="150 points"

                    android:textColor="@color/colorlight"
                    android:textAlignment="center">
                </TextView>
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Mon Nouveau Score"
                    android:textSize="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorPrimaryDark">
                </TextView>

                <TextView
                    android:id="@+id/nouveauScore"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="100 points"

                    android:textColor="@color/colorlight"
                    android:textAlignment="center">
                </TextView>
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Date de mise a jour"
                    android:textSize="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorPrimaryDark">
                </TextView>

                <TextView
                    android:id="@+id/Datemaj"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="21/11/2020"

                    android:textColor="@color/colorlight"
                    android:textAlignment="center">
                </TextView>
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Le Sponsor "
                    android:textSize="20dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorPrimaryDark">
                </TextView>

                <TextView
                    android:id="@+id/sponsor"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Plan B"
                    android:textColor="@color/colorlight"
                    android:textAlignment="center">
                </TextView>

            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <Button
                android:id="@+id/btnok"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="OK"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/robo_regular"
                android:background="@drawable/button"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
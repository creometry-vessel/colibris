<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bachkroug2"
    android:orientation="vertical"
    tools:context=".AjouterEvenemnt">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardscore"
        android:layout_width="350dp"
        android:layout_height="400dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="6dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="201dp"
        android:layout_marginEnd="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Creer un evenement "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp"
                android:fontFamily="@font/roboto_bold"
/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_bold"/>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nommer votre evenement"
                    android:textSize="15dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorPrimaryDark">
                </TextView>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/nomevenemnt"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="nom"
                    android:background="@null"
                    android:textColor="@color/colorlight"
                    android:textAlignment="center">
                </EditText>
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresse "
                    android:textSize="15dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorPrimaryDark">
                </TextView>

                <Space
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/lieuevents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="adresse"
                    android:background="@null"
                    android:textColor="@color/colorlight"
                    android:textAlignment="center">
                </EditText>
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp"/>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date de l'evenemneet "
                    android:textSize="15dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/colorPrimaryDark">
                </TextView>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
android:layout_marginLeft="50dp"
                    android:id="@+id/dateevents"
                    android:hint="date"
                    android:textSize="15dp"
                    android:background="@null"
                    android:textColor="@color/colorlight"

                    />

            </LinearLayout>
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:id="@+id/temps"
                android:hint="date"
                android:textSize="15dp"
                android:background="@null"
                android:textColor="@color/colorlight"

                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/addevent"
                android:textSize="15dp"
                android:text="Ajouter"
                android:fontFamily="@font/robo_regular"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:background="@drawable/button"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bachkroug2"
    android:orientation="vertical"
    tools:context=".Profildonneur">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardscore"
        android:layout_width="350dp"
        android:layout_height="400dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="6dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon Profil"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_bold"
                android:textSize="20dp"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector"/>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" android:orientation="horizontal">
               <TextView
                android:id="@+id/firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="true"
                android:text="Imen El abed"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:fontFamily="@font/robo_regular"
                />
               <Space
                   android:layout_width="20dp"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:id="@+id/lastname"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:editable="true"
                   android:text="Imen El abed"
                   android:textColor="@color/colorPrimary"
                   android:textSize="15dp"
                   android:fontFamily="@font/robo_regular"
                   />
           </LinearLayout>
            <TextView
                android:id="@+id/numdonneur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="true"
                android:text="55755201"
                android:textColor="@color/colorlight"
                android:textSize="12dp"
                android:fontFamily="@font/roboto_bold"
                />
            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/adressedonneur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="true"
            android:text="40 cite zitouna 2 kantaoui Sousse,4089"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            android:fontFamily="@font/roboto_bold"

            />
            <Space
                android:layout_width="20dp"
                android:layout_height="30dp"/>
            <Button
                android:id="@+id/btnsave"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:editable="true"
                android:text="Enregistrer"
                android:textColor="@color/colorAccent"
                android:background="@drawable/button"
                android:textSize="10dp"
                android:fontFamily="@font/robo_regular"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="true"
            android:text="40 cite zitouna 2 kantaoui Sousse,4089"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp"
            android:visibility="invisible"
            android:fontFamily="@font/roboto_bold"

            />
        <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="true"
        android:text="40 cite zitouna 2 kantaoui Sousse,4089"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
            android:visibility="invisible"
        android:fontFamily="@font/roboto_bold"

        />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
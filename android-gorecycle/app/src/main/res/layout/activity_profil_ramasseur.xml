<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bachkroug2"
    tools:context=".ProfilRamasseur">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardscore"
        android:layout_width="350dp"
        android:layout_height="400dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="6dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="201dp"
        android:layout_marginEnd="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon Profil"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_bold"
                android:textSize="20dp"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:id="@+id/imageram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/vector"/>
            <TextView
                android:id="@+id/firstlastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="true"
                android:text="Mahdi Khalil"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:fontFamily="@font/robo_regular"
                />
            <TextView
                android:id="@+id/numramasseur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="true"
                android:text="55755201"
                android:textColor="@color/colorlight"
                android:textSize="12dp"
                android:fontFamily="@font/roboto_bold"
                />

            <TextView
                android:id="@+id/codetravailleur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="true"
                android:text="mk287s"
                android:textColor="@color/colorlight"
                android:textSize="12dp"
                android:fontFamily="@font/roboto_bold"
                />
            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/adresseramasseur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="true"
                android:text="40 cite zitouna 2 kantaoui Sousse,4089"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:fontFamily="@font/roboto_bold"

                />
            <Space
                android:layout_width="20dp"
                android:layout_height="30dp"/>
            <Button
                android:id="@+id/btnsave"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:editable="true"
                android:text="Enregistrer"
                android:textColor="@color/colorAccent"
                android:background="@drawable/button"
                android:textSize="10dp"
                android:fontFamily="@font/robo_regular"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
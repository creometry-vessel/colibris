<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bachkroug2"
    tools:context=".produitdonnation">


    <androidx.cardview.widget.CardView
        android:id="@+id/carddetail"
        android:layout_width="350dp"
        android:layout_height="400dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="6dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="201dp"
        android:layout_marginEnd="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/pdt"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_bold"
                android:textSize="30dp"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:id="@+id/imgp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/verre"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/moin"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@color/cardview_light_background"
                    android:text="Moin"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                android:id="@+id/qt"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@color/cardview_light_background"
                android:text="1"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/colorlight"/>
                <Button
                    android:id="@+id/plus"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@color/cardview_light_background"
                    android:text="Plus"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimaryDark"/>

            </LinearLayout>
            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/disc"
                android:padding="10dp"
                android:textAlignment="center"
                android:text="ce produit est recycler pour des raisons /n ecologique pour proteger la nature /n vous recevez 5point sur la piece"/>

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <Button
                android:id="@+id/btnajouter"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:fontFamily="@font/frank_regular"
                android:textColor="@color/cardview_light_background"
                android:background="@drawable/button"
                android:text="Ajouter"
/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

